{{#if officialIndicators}}
  <div class="c-score-table">
    <div class="table-header">
      <div class="table-row">
        <div class="table-cell -category">
          <span>IAEG Global Indicator</span>
        </div>

        {{#each countries}}
          <div class="table-cell -country">
            <span>{{#if name }} {{name}} {{else}} - {{/if}}</span>
          </div>
        {{/each}}

      </div>
    </div>
    <div class="table-body">

      {{#each officialIndicators}}

        <div class="table-row">
          <div class="table-cell -indicator">
            <a href="{{ ../siteurl }}/data/?indicator={{ indicator_slug }}" class="c-indicator-name">{{indicator_code}} {{ indicator_title }}</a>
            <span class="c-indicator-metadata">
              <span>Score range:
                {{#if worst_score }}
                  {{ worst_score }} (worst) -
                {{else}}
                  {{#unless best_score}}
                    -
                  {{/unless}}
                {{/if}}
                {{#if best_score }}
                  {{ best_score }} (best)
                {{/if}}
              </span>
              {{#if units}}<span> {{ units }}</span>{{/if}}
              {{#if year }}<span> Last update {{ year }}</span>{{/if}}
            </span>
          </div>

          <div class="table-cell -score">
            <span>
              {{#if literalScoreA}}
                {{ literalScoreA }}
              {{else}}
                {{comma scoreA }}{{#if scoreA}}<span class="units">{{ units_abbr }}</span>{{/if}}
              {{/if}}
            </span>
            <span class="country-name only-mobile">{{lookup (lookup ../countries 0) 'name' }}</span>
          </div>

          <div class="table-cell -score">
            <span>
              {{#if literalScoreB}}
                {{ literalScoreB }}
              {{else}}
                {{comma scoreB }}{{#if scoreB}}<span class="units">{{ units_abbr }}</span>{{/if}}
              {{/if}}
            </span>
            <span class="country-name only-mobile">{{lookup (lookup ../countries 1) 'name' }}</span>
          </div>

          <div class="table-cell -score">
            <span>
              {{#if literalScoreC}}
                {{ literalScoreC }}
              {{else}}
                {{comma scoreC }}{{#if scoreC}}<span class="units">{{ units_abbr }}</span>{{/if}}
              {{/if}}
            </span>
            <span class="country-name only-mobile">{{lookup (lookup ../countries 2) 'name' }}</span>
          </div>
        </div>

        {{else}}
          <div class="table-row">
            <span class="no-indicators">No IAEG Global Indicators for this target</span>
          </div>
        {{/each}}
    </div>

{{else}}

  <p class="no-indicators">No indicators available for this target</p>

{{/if}}

