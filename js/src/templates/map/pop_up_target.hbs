<div class="m-popup">
  <button class="btn-close">
    <svg class="icon icon-close">
      <use xlink:href="#icon-close"></use>
    </svg>
  </button>
  <div class="wrapper">

    <a href="countries/FRA"><h1 class="c-title-popup -small">{{name}}</h1></a>
    
    <div class="scroll-wrapper">
      {{#if indicators}}
        {{#if indicators.official}}
        <p class="c-subtitle-popup">OFFICIAL INDICATORS</p>
          {{#each indicators.official}}
            <div class="data-numbers">
              <span class="data-numbers-text">{{title}}</span>
              <span class="c-score-popup -small">{{score}} {{units_abbr}}</span>
            </div>
          {{/each}}
        {{/if}}
        {{#if indicators.shadow}}
        <p class="c-subtitle-popup -shadow">SHADOW INDICATORS</p>
          {{#each indicators.shadow}}
            <div class="data-numbers">
              <span class="data-numbers-text">{{title}}</span>
              <span class="c-score-popup -small">{{score}} {{units_abbr}}</span>
            </div>
          {{/each}}
        {{/if}}
      {{/if}}
    </div>

    <div class="links">
      <a href="{{url}}/countries/?iso={{iso}}">visit country page > </a>
      <a href="{{url}}/compare/?isoA={{iso}}">compare to others > </a>
    </div>
  </div>
</div>
<div id="popup-background"></div>
