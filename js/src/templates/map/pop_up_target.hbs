<div class="m-popup">
  <button class="btn-close">
    <svg class="icon icon-close">
      <use xlink:href="#icon-close"></use>
    </svg>
  </button>
  <div class="wrapper">
    <a href="{{ siteurl }}/countries/?iso={{iso}}"><h1 class="c-title-popup -small">{{country.name}}</h1></a>
    <div class="scroll-wrapper">
      {{#if indicators}}
        {{#if indicators.official}}
        <p class="c-subtitle-popup">IAEG global indicators</p>
          {{#each indicators.official}}
            <div class="data-numbers">
              <div class="data-info">
                <a class="title" href="{{ siteurl }}/data/?indicator={{ slug }}"><p class="title">{{indicator_code}} {{title}}</p></a>
                <span class="info">Score range: {{max_score}} - {{min_score}}</span><span class="info"> | Units: {{units}}</span><span class="info"> | Last update: {{year}}</span>
              </div>
              <span class="c-score-popup -small">{{comma score}}<span class="units">{{units_abbr}}</span></span>
            </div>
          {{/each}}
        {{/if}}
        {{#if indicators.shadow}}
        <p class="c-subtitle-popup -shadow">complementary global indicators</p>
          {{#each indicators.shadow}}
            <div class="data-numbers">
              <div class="data-info">
                <a class="title" href="{{ siteurl }}/data/?indicator={{ slug }}"><p class="title">{{indicator_code}} {{title}}</p></a>
                <span class="info">Score range: {{max_score}} - {{min_score}}</span><span class="info"> | Units: {{units}}</span><span class="info"> | Last update: {{year}}</span>
              </div>
              <span class="c-score-popup -small">{{comma score}}<span class="units">{{units_abbr}}</span></span>
            </div>
          {{/each}}
        {{/if}}
      {{/if}}
    </div>

    <div class="links">
      <a href="{{ siteurl }}/countries/?iso={{country.iso}}">visit country page > </a>
      <a href="{{ siteurl }}/compare/?isoA={{country.iso}}">compare to others > </a>
    </div>
  </div>
</div>
<div id="popup-background"></div>
