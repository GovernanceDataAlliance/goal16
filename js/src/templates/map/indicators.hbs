{{#if official}}
<div class="indicators-type-wrapper official-indicators">
  <span class="indicator-type">IAEG global indicator</span>
  {{#each official}}
  <div class="indicator-wrapper">
    <input type="radio" name="layer-selector" value={{slug}} id={{slug}} class="js--layer-selector -indicator">
    <label for="{{ slug }}"><h1 class="indicator-title">{{ indicator_code }} {{ title }}</h1></label>
    <button class="js--indicator-info btn-info" data-slug={{ slug }}>
      <svg class="icon-info">
        <use xlink:href="#icon-info"></use>
      </svg>
    </button>
  </div>
  {{/each}}
</div>
{{/if}}
{{#if shadow}}
<div class="indicators-type-wrapper shadow-indicators">
  <span class="indicator-type">complementary global indicator</span>
  {{#each shadow}}
  <div class="indicator-wrapper">
    <input type="radio" name="layer-selector" value={{slug}} id={{slug}} class="js--layer-selector -indicator">
    <label for={{slug}}><h1 class="indicator-title">{{ indicator_code }} {{title}}</h1></label>
    <button class="js--indicator-info btn-info" data-slug="percentage_of_people_violence">
      <svg class="icon-info">
        <use xlink:href="#icon-info"></use>
      </svg>
    </button>
  </div>
  {{/each}}
</div>
{{/if}}
