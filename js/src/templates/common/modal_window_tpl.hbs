{{#if isBase}}
  <div id="infowindow-base">
    <div class="m-modal-window {{#if isMapDisclaimer}}-disclaimer{{/if}}">
      <div class="modal-wrapper">
        <div class="btn-close-modal close-icon"><svg class="icon icon-close"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-close"></use></svg></div>
        <div class="modal-container">
          <div id="modal-content" class="modal-content">
            {{{content}}}
          </div>
        </div>
      </div>
      <div class="modal-background"></div>
    </div>
  </div>
{{/if}}

{{#if isIndicator}}
  <div id="info-infowindow info-window-secondary">
    <div class="-indicator">
      <h2 class="c-title-popup -big-modal">Indicator name</h2>
      <div class="info-wrapper">
      </div>
      <p>description Lorem ipsum dolor sit amet, consectetur adipisicing elit. Officiis optio, pariatur natus, molestias atque assumenda accusantium, tempore ab, sunt asperiores neque corrupti perferendis sit non laudantium quo fugiat? Officiis, quibusdam.</p>
    </div>
  </div>
{{/if}}

{{#if isMapDisclaimer}}
  <h3 class="c-title-underline -left">Get started</h3>
  {{#if isMobile}}
    <p>Click on the “Explore and select the targets” button below to see which countries have data over the map</p>
  {{else}}
    <p>Click on a target or an indicator to the left side to see which countries have data over the map</p>
  {{/if}}
{{/if}}
