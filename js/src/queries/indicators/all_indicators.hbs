SELECT

  i.code as indicator_code, 
  i.description, 

  i.best_score, 
  i.worst_score, 
  i.slug as indicator_slug, 
  i.target_slug, 
  i.title as indicator_title, 
  i.type, 
  i.units,  

  s.link as source_link, 
  s.name as source_name 

FROM 
  {{ indicators_table }} as i 
left join 
  {{ sources_table }} as s 
on 
 source_slug = s.slug 
order by 
  i.code
