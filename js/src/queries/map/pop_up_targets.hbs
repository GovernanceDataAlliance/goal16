SELECT 
  i.code as indicator_code, 
  i.slug, 
  i.title, 
  s.score, 
  s.iso, 
  i.type,  
  i.units_abbr 
FROM {{indicators_table}} i JOIN {{scores_table}} s ON s.indicator_slug=i.slug 
WHERE i.target_slug = '{{slug}}' 
AND 
s.iso LIKE (SELECT iso FROM {{countries_table}} WHERE st_intersects(the_geom, st_setSrid(ST_MakePoint({{lng}}, {{lat}}),4326))) 
